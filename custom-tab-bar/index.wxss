.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90rpx;
  background: #FFF ;
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid #e6e6e6;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item  {
  margin-top: 6rpx;
  width: 80rpx;
  height: 80rpx;
}
.image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}
.bulge {
  background-color: #FFF;
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -40rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border-top: 1rpx solid #e6e6e6;
  background-color: #FFF;
}
.bulge .image{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: -50rpx;
  padding-top: 20rpx;
}
.bulge .tab-bar-view{
  padding-top: 50rpx;
}
.tab-bar-item .tab-bar-view {
  font-size: 22rpx;
  color: #333333;
}
