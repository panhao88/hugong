/* pages/online/online.wxss */
.local {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FAFAFAFF;
}

.central {
  width: 95%;
  background: #fff;
}

.van-button {
  width: 140rpx !important;
  height: 120rpx !important;
  background: #FF2C2C;
  color: #FAFAFAFF;
}

.tp-news {
  height: 120rpx;
  display: flex;
  align-items: center;
}

.timer {
  width: 30%;
  display: flex;
  justify-content: flex-end;
  color: #999999;
}

.tp-img {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.separate {
  width: 50%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.A-Wang {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.appetite {
  color: #999999;
  font-size: 24rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.van-divider {
  margin: 8rpx 0 !important;
}