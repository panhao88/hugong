/* pages/coupon/coupon.wxss */
.local {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FAFAFAFF;
}

.central {
  width: 95%;
}
.coupon {
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  border-radius: 20px;
  background:
    linear-gradient(0.25turn, #FEFEFEFF, #FEFEFEFF) right /70% 100% no-repeat,
    radial-gradient(circle at right top, transparent 10rpx, #EEF8F0FF 0) top left / 25% 51% no-repeat,
    radial-gradient(circle at right bottom, transparent 10rpx, #EEF8F0FF 0) bottom left /25% 51% no-repeat,
    radial-gradient(circle at left top, transparent 10rpx, #FEFEFEFF 0) top right /75% 51% no-repeat,
    radial-gradient(circle at left bottom, transparent 10rpx, #FEFEFEFF 0) bottom right /75% 51% no-repeat;
  filter: drop-shadow(3px 3px 3px rgba(0, 0, 0, .2));
}