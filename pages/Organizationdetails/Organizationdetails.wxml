<view class="localpl">
  <!-- 轮播图 -->
  <view class="wrap">
    <swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{2000}}" duration="{{500}}" circular="{{true}}"
      class="wrap">
      <swiper-item wx:for="{{list}}" wx:key="index">
        <image src="{{item.img}}" class="img-i"></image>
      </swiper-item>
    </swiper>
  </view>
  <view class="central">
    <view class="region">
      <view class="region-tow">
        <view class="service">
          <view class="service-zh">
            <view class="Aunt_Zhang">成都好姐姐陪护服务有限公司</view>
          </view>
        </view>
        <view class="Gender">
          <view class="location">
            <view>
              <image src="../../img/mipmap-mdpi/dingwei.png" class="img-di"></image>
            </view>
            <view>蜀都中心一期</view>
          </view>
        </view>
        <view class="authentication">
          <scroll-view class="scroll-view" scroll-x="true">
            <view wx:for="{{arrli}}" wx:key="index" class="scroll-item_H">
              <view class="bor">{{item.name}}</view>
            </view>
          </scroll-view>
        </view>
        <view class="Years">
          <view class="score">
            <view class="cool">5.0</view>
            <van-rate value="{{ value }}" size="{{ 14 }}" color="#FCC954" void-color="#eee" void-icon="star"
              bind:change="onChange" />
          </view>
          <view class="score">
            <view class="cool">10</view>
            <view class="fu-color"> 服务人数</view>
          </view>
          <view class="score">
            <view class="cool">10</view>
            <view class="fu-color"> 从业年限</view>
          </view>
          <view class="score">
            <view class="cool">9999+</view>
            <view class="fu-color">用户评论</view>
          </view>
        </view>
        <view class="bor-d"></view>
        <view class="details" wx:if="{{boxshow}}">
          本人从事配属行业10年
          本人从事配属行业10年
          本人从事配属行业10年
          本人从事配属行业10年
          本人从事配属行业10年
          本人从事配属行业10年
        </view>
        <view class="shang">
          <image src="../../img/mipmap-mdpi/shang.png" class="img-shang" bindtap="Negation"></image>
        </view>
      </view>
    </view>
    <view class="Safety-certification">
      <view class="guarantee">
        <view class="security">
          <view>安全保障</view>
          <view class="image-icon">
            <image src="../../img/mipmap-mdpi/zhishitubiao.png" class="zhishitu"></image>
          </view>
        </view>
        <view class="Allcertifications">
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/pingtai.png" class="rz-tu"></image>
            </view>
            <view class="platform">平台认证</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/shiming.png" class="rz-tu"></image>
            </view>
            <view class="platform">实名认证</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/gongan.png" class="rz-tu"></image>
            </view>
            <view class="platform">公安联网</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/tijian.png" class="rz-tu"></image>
            </view>
            <view class="platform">体检报告</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/zhuanye.png" class="rz-tu"></image>
            </view>
            <view class="platform">专业证书</view>
          </view>
        </view>
      </view>
    </view>
    <view class="Service-Items">
      <view class="guarantee">
        <view class="security">
          <view>服务项目</view>
          <view class="image-icon">
            <image src="../../img/mipmap-mdpi/zhishitubiao.png" class="zhishitu"></image>
          </view>
        </view>
        <view class="Allcertifications">
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/ji1.png" class="rz-tu-ren"></image>
            </view>
            <view class="pin-authentication">病人陪护</view>
            <view class="three-hundred">300天/1月</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/ji2.png" class="rz-tu-ren"></image>
            </view>
            <view class="pin-authentication">产妇陪护</view>
            <view class="three-hundred">300天/1月</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/ji3.png" class="rz-tu-ren"></image>
            </view>
            <view class="pin-authentication">老人陪护</view>
            <view class="three-hundred">300天/1月</view>
          </view>
          <view class="vertical">
            <view>
              <image src="../../img/mipmap-mdpi/ji4.png" class="rz-tu-ren"></image>
            </view>
            <view class="pin-authentication">月嫂陪护</view>
            <view class="three-hundred">300天/1月</view>
          </view>
        </view>
      </view>
    </view>
    <view class="Service-pl">
      <view class="guarantee">
        <view class="top-bo">
          <view class="plsecurity">
            <view>护工(200)</view>
            <view class="image-icon">
              <image src="../../img/mipmap-mdpi/zhishitubiao.png" class="zhishitu"></image>
            </view>
          </view>
          <view>查看全部></view>
        </view>
        <view>
          <scroll-view class="scroll-view" scroll-x="true">
            <view wx:for="{{arr}}" wx:key="index" class="scroll-item_H">
              <view class="img-a">
                <view>
                  <image src="{{item.imag}}" class="img"></image>
                </view>
                <view class="aunt">
                  <view class="Aunt-Wang">王阿姨</view>
                  <view>
                    <van-rate value="{{ value }}" size="{{ 14 }}" color="#FCC954" void-color="#eee" void-icon="star"
                      bind:change="onChange" />5.0
                  </view>
                  <view>
                    <scroll-view class="scroll-view" scroll-x="true">
                      <view wx:for="{{arrli}}" wx:key="index" class="scroll-item_H">
                        <view class="Platform-certification">
                          <view class="bor-de">{{item.name}}</view>
                        </view>
                      </view>
                    </scroll-view>
                  </view>
                </view>
              </view>
            </view>
          </scroll-view>
        </view>
      </view>
    </view>
  </view>
  <view class="shang-top">
    <view class="shang-updata">
      <image src="../../img/mipmap-mdpi/shang.png" class="img-shang" bindtap="gopicture"></image>
      <view class="updata">上拉查看图文详情</view>
    </view>
    <view class="Healthcare" wx:if="{{picture === true}}">
      <image src="../../img/mipmap-mdpi/tu.png" class="imgtext"></image>
    </view>
  </view>
  <van-goods-action>
    <van-goods-action-icon icon="star-o" text="收藏" bind:click="onClickIcon" />
    <van-goods-action-icon icon="phone-o" text="联系商家" bind:click="onClickIcon" />
    <button class="appointment-now">立即预约</button>
  </van-goods-action>
  <view class="buootb"></view>
</view>