<view class="local">
  <view class="central">
    <view class="Nursing-workers">
      <view class="Hot" wx:for="{{hugong}}" wx:key="index" class="{{flag === index ? 'colore' : ''}}" bindtap="goto"
        data-index="{{index}}">
        <view class="tob-name">
          {{item.name}}
          <view wx:if="{{flag === index}}">
            <image src="../../img/mipmap-mdpi/zhishitubiao.png" class="tubiao-p"></image>
          </view>
        </view>
      </view>
    </view>
    <view wx:if="{{flag === 0}}">
      <van-swipe-cell right-width="{{ 65 }}" bind:open="onOpen" wx:key="item" wx:for="{{data}}">
        <view class="Popular-nurse">
          <view class="service">
            <view>
              <image src="../../img/mipmap-mdpi/yuesao.png" class="imm-age"></image>
            </view>
          </view>
          <view>
            <view class="Aunt-Zhang">
              <view class="aunt">
                <view class="font">张阿姨</view>
                <view class="font"> 好评率:
                  <view class="cor">98%</view>
                </view>
              </view>
              <view class="Gender">
                <view class="plage">{{item.Gender}}</view>
                <view class="plage">{{item.age}}岁</view>
                <view class="plage">从业年限{{item.Years}}年</view>
              </view>
              <view class="authentication">
                <view class="Platform-certification">平台认证</view>
                <view class="Platform-certification">病人陪护</view>
                <view class="Platform-certification">产妇陪护</view>
              </view>
            </view>
          </view>
        </view>
        <van-divider />
        <van-button type="danger" slot="right">删除</van-button>
      </van-swipe-cell>
    </view>
    <view wx:if="{{flag === 1}}">
      <van-swipe-cell right-width="{{ 65 }}">
        <view class="flag1">
          <view class="Popular-nurse" bindtap="godetaild">
            <view class="service">
              <view>
                <view class="immage-mechanism">
                  <image src="../../img/mipmap-mdpi/logo.png" class="logo"></image>
                </view>
              </view>
            </view>
            <view class="Aunt-Zhang">
              <view class="hao-jj">成都好姐姐陪护服务有限公司</view>
              <view>
                <van-rate value="{{ value }}" size="{{ 12 }}" color="#ee0a24" void-color="#eee" void-icon="star" />
              </view>
              <view class="location">
                <view>
                  <image src="../../img/mipmap-mdpi/dingwei.png" class="img-di"></image>
                </view>
                <view>蜀都中心一期--距离0.1km</view>
              </view>
              <view class="authenticationtop">
                <view class="Platform-certification">平台认证</view>
                <view class="Platform-certification">病人陪护</view>
                <view class="Platform-certification">产妇陪护</view>
              </view>
            </view>
          </view>
          <van-divider />
        </view>
        <van-button type="danger" slot="right">删除</van-button>
      </van-swipe-cell>
    </view>
  </view>
</view>